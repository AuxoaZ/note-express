<div class="row">
  <!-- tampilan dekstop -->
  <% notes.forEach(note=> { %>
  <div class="col-lg-4 col-md-6 col-sm-12 ">
    <div class="card border-secondary mb-3 note-bg">
      <div class="card-body text-secondary">
        <p class="card-text py-0 my-0 font-note">
          <%= note.note %>
        </p>
        <p class="card-text py-0 mb-0 font-date text-end">
          <%= note.dateNote %>
      </div>
      <div class="card-footer bg-transparent border-secondary my-0 pb-1 pt-1">
        <div class="text-end">
          <a href="/note/delete/<%= note.id  %> " class="badge text-bg-light" onclick="return confirm('Yakin?');"><i class="fa-solid fa-trash-can" style="color: red;"></i></a>
          <span class="badge text-bg-light" data-bs-toggle="modal" data-bs-target="#editModal<%= note.id  %>"><i class="fa-solid fa-pen" style="color: green;"></i></span>
        </div>

        <!-- Edit Modal -->
        <div class="modal fade " id="editModal<%= note.id  %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">

                <form method="post" action="/editNote">
                  <div class="mb-3">
                    <label for="note" style="color: black;">Adakah momen penting?</label>
                    <input type="text" class="form-control" id="note" name="note" value="<%= note.note %>" required>
                  </div>
                  <div>
                    <label for="dateNote" style="color: black;">Waktu</label>
                    <input type="date" name="dateNote" id="dateNote" value="<%= note.dateNote %>" required>
                    <input type="hidden" id="idOld" name="idOld" value="<%= note.id %>">
                  </div>
              </div>
              <div class=" modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-primary">Edit</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% }) %>

</div>


<!-- Button trigger add modal -->
<button type="button" class="float" data-bs-toggle="modal" data-bs-target="#addModal">
  <a class="float" style="color: black;">
    <i class="fa fa-plus my-float"></i>
    <!-- <i class="bi bi-plus my-float"></i> -->
  </a>
</button>

<!-- Add Modal -->
<div class="modal fade" id="addModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">

        <form method="post" action="/addNote">
          <div class="mb-3">
            <label for="note" style="color: black;">Adakah momen penting?</label>
            <input type="text" class="form-control" id="note" name="note" required>
          </div>
          <div>
            <label for="dateNote" style="color: black;">Waktu</label>
            <input type="date" name="dateNote" id="dateNote" required>
          </div>
      </div>
      <div class=" modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary">Add</button>
        </form>
      </div>
    </div>
  </div>
</div>